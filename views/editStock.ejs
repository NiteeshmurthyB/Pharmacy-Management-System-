<%- include("partials/header"); %>  

    <title>New Stock</title>
    <link rel="stylesheet" type="text/css" href="/newStock.css">
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;700&family=Nunito:wght@400;700&display=swap" rel="stylesheet">


  <div class="container">
    <form action="/viewStock/<%= foundStock._id%>?_method=PUT" method="post">
            <div class="card border-success  mb-3" style="max-width: 35rem;">
                <div class="card-header text-center"> <h1>Edit Stock</h1></div>
                <div class="card-body">
                    <div class="form-row">    
                      <div class="col-6">
                         <label for="Company Name">Company Name:</label>
                            <input type="text" class="form-control" name="companyName" id="companyName" value="<%= foundStock.companyName%>" style="max-width: 20rem;" >
                        </div>
                        <br>
                        <div class="col-4.5 date">
                            <label for="Date">Date :</label>
                            <input type="date" class="form-control" style="max-width: 11rem;" id="date" name="date" value="<%= foundStock.date %>"  required>
                          </div> 
                    </div>
                        <div class="col-7">
                            <label for="Mobile Number">Mobile Number:</label>
                               <input type="text" class="form-control" name="mobileNo" id="mobileNo" style="max-width: 12rem;" maxlength="10" value="<%= foundStock.mobileNo%>" placeholder="Mobile Number">
                        </div>
                        <div class="col-7">
                            <label for="Address">Address :</label>
                               <input type="text" class="form-control" name="address" id="address" value="<%= foundStock.address%>" placeholder="Address">
                        </div>
                        <div class="col-7">
                            <label for="InvoiceNumber">Invoice Number :</label>
                               <input type="text" class="form-control" style="max-width: 12rem;" id="invoiceNo" name="invoiceNo" value="<%= foundStock.invoiceNo%>" placeholder="InvoiceNumber">
                        </div>
                   <!--  <form> -->
                        <div class="form-row">
                          <div class="col-7">
                            <label for="medicineName">Medicine Name:</label>
                            <input type="text" class="form-control" name="medicineName" style="max-width: 20rem;" id="medicineName" value="<%= foundStock.medicineName%>" required >
                          </div>
                          <div class="col-3">
                            <label for="Quantity">Quantity:</label>
                            <input type="number" class="form-control" value="<%= foundStock.quantity%>" name="quantity" style="max-width: 6rem;" maxlength="5" id="quntity" required>
                          </div> 
                        </div>
                        <div class="form-row">
                            <div class="col-4">
                              <label for="Cost Price">Cost Price:</label>
                              <input type="number" class="form-control"  value="<%= foundStock.costPrice%>" name="costPrice"  style="max-width: 12rem;" id="costPrice" required>
                            </div>
                            <div class="col-4 sp">
                              <label for="sellingPrice">Selling Price :</label>
                              <input type="number" class="form-control" value="<%= foundStock.sellingPrice%>" name="sellingPrice" style="max-width: 12rem;" id="sellingPrice" required>
                            </div> 
                          </div>
                      <!-- </form> -->
                    </br>
                      <button type="submit" class="btn btn-success">Update Stock</button>
                </div>
            </div>
        </div>
    </form>
  </div>
  <%- include("partials/footer"); %>  