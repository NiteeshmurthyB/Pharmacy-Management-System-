<%- include("partials/header"); %>   

       <title>View User</title>
       <link rel="stylesheet" type="text/css" href="/viewuser.css">
       <link href="https://fonts.googleapis.com/css2?family=Cuprum:wght@400;700&display=swap" rel="stylesheet">
   
        <div class="container">
            <h1 class="display-4">All Registered Users </h1>
            <hr>
            <table border="2" class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>First-Name</th>
                        <th>Last-Name</th>
                        <th>Position</th>
                        <th>Mobile</th>
                        <th>Email</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% foundusers.forEach(user=>{%>
                    <tr>
                        <td><%=user.firstName%></td>
                        <td><%=user.lastName%></td>
                        <td><%=user.position%></td>
                        <td><%=user.mobileNumber%></td>
                        <td><%=user.email%></td>
                        <td><form action="/<%=user._id%>/?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-primary btn-dark">Delete</button>
                        </form>
                         </td>
                    </tr>
                    <%})%>
                </tbody>
            </table>
        </div>
    </body>
</html>